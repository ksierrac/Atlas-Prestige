
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<fragment
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="475dp"
    tools:context="com.example.bryan.myapplication.MapsActivity"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />


    <Button
        android:layout_width="75dp"
        android:onClick="onButtonClicked"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:id="@+id/directionsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/map" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:text="Bikes"
        android:id="@+id/bikesButton"
        android:layout_alignBottom="@+id/directionsButton"
        android:layout_toRightOf="@+id/directionsButton"
        android:layout_toEndOf="@+id/directionsButton"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:text="Bus"
        android:id="@+id/busButton"
        android:layout_above="@+id/map"
        android:layout_toRightOf="@+id/bikesButton"
        android:layout_toEndOf="@+id/bikesButton"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:text="Food"
        android:id="@+id/foodButton"
        android:layout_above="@+id/map"
        android:layout_toRightOf="@+id/busButton"
        android:layout_toEndOf="@+id/busButton"
        android:layout_alignParentTop="true"
        />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonClicked"
        android:text="POI"
        android:id="@+id/POIButton"
        android:layout_above="@+id/map"
        android:layout_toRightOf="@+id/foodButton"
        android:layout_toEndOf="@+id/foodButton"
        android:layout_alignParentTop="true" />


</RelativeLayout>